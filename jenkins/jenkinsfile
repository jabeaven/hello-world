def gitUrl = 'git://github.com/jabeaven/hello-world'

job('generated/hello-world') {
    scm {
        git(gitUrl)
    }
    triggers {
        scm('*/15 * * * *')
    }
    steps {
        maven('-e clean compile')
    }
    steps {
        maven('exec:java -Dexec.mainClass=com.mycompany.app.App')
    }
}
